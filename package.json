{
  "name": "create-scss-cli",
  "version": "1.5.4",
  "description": "A command-line interface for a quick and easy way to organize your scss. Generate an scss folder structure anywhere you want in your application. Choose the template you want to use (complete, clean, custom). Manage your file the same way in every project, and save time doing it.",
  "export": "dist/index.js",
  "type": "module",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "bin": {
    "cs-cli": "dist/index.js"
  },
  "scripts": {
    "lint": "eslint src/index.ts",
    "lint-fix": "eslint --fix src/index.ts",
    "test": "npm run lint",
    "watch": "tsc --watch",
    "build": "tsc && cp -R src/assets dist/"
  },
  "author": "Maxime Daraize <hello@maximedaraize.com>",
  "homepage": "https://www.createscss.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maximedaraize/create-scss-cli"
  },
  "url": "https://github.com/maximedaraize/create-scss-cli/issues",
  "license": "MIT",
  "keywords": [
    "scss",
    "sass",
    "css",
    "cli",
    "scaffold",
    "starter",
    "template",
    "directory"
  ],
  "dependencies": {
    "boxen": "^6.2.1",
    "chalk": "^4.1.2",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "inquirer": "^8.2.0",
    "latest-version": "^6.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.1",
    "typescript": "^4.4.4"
  },
  "files": [
    "dist/**/**"
  ]
}
